      <nav class="navbar-inner">
        <div class="container">
          <!-- erb render 'layouts/navigation'  -->
        </div>
      </nav>
    </header>
    <main role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <h4 id="brand_logo">Group Sounds (The Juketube Project)</h4>

           <!--    erb render 'layouts/messages'  -->
              <%= render 'layouts/user_widget' %>

              <%= yield %>

            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div>
    </main>


    <script src="http://js.pusher.com/2.1/pusher.min.js"></script>

  </body>
</html>
